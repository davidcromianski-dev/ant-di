{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "dist/types",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "module": "commonjs",
    "strict": true,
    "skipLibCheck": true,
    "types": ["jest"],
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*", "**/*.test.ts"]
}
